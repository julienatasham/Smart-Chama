import json
import os

CHARMERS_FILE = 'chamas.json'

def load_chama():
    """Load the list of chama (chamas) from JSON file."""
    if not os.path.exists(CHAMA_FILE):
        return []
    with open(CHAMA_FILE, 'r') as f:
        return json.load(f)

def save_chama(chama):
    """Save the list of chama (chamas) back to JSON file."""
    with open(CHAMA_FILE, 'w') as f:
        json.dump(chama, f, indent=4)

